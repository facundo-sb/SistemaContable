<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Cuentas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<%- include('../partials/sidebar') %>
    <div class="container mt-5">
        <h1>Listado de Cuentas</h1>
        <a href="/cuentas/agregar" class="btn btn-primary">Agregar Nueva Cuenta</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Número de Cuenta</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% cuentas.forEach(cuenta => { %>
                    <tr>
                        <td><%= cuenta.nro_cuenta %></td>
                        <td><%= cuenta.nombre %></td>
                        <td><%= cuenta.tipo %></td>
                        <td>
                            <a href="/cuentas/editar/<%= cuenta.id %>" class="btn btn-warning">Editar</a>
                            <form action="/cuentas/eliminar/<%= cuenta.id %>" method="POST" style="display:inline;" onsubmit="return confirm('¿Estás seguro de eliminar esta cuenta?');">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>